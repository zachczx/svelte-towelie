{
	"name": "svelte-towelie",
	"private": true,
	"version": "0.2",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"generate": "drizzle-kit generate",
		"drizz": "drizzle-kit generate && drizzle-kit migrate && drizzle-kit push",
		"migrate": "drizzle-kit migrate",
		"push": "drizzle-kit push",
		"pull": "drizzle-kit pull",
		"drop": "drizzle-kit drop",
		"better": "npx @better-auth/cli@latest generate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@sveltejs/adapter-cloudflare": "^7.2.3",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/enhanced-img": "^0.8.1",
		"@sveltejs/kit": "^2.37.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@types/node": "^24.3.0",
		"daisyui": "^5.0.54",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.38.6",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.41.0",
		"vite": "^7.1.4"
	},
	"dependencies": {
		"@ark-ui/svelte": "^5.7.0",
		"@fontsource-variable/quicksand": "^5.2.8",
		"@fontsource/chewy": "^5.2.6",
		"better-auth": "^1.3.7",
		"dayjs": "^1.11.18",
		"pocketbase": "^0.26.2",
		"postgres": "^3.4.7"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
